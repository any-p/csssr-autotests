{
  "src_folders" : ["tests"],

  "webdriver" : {
    "start_process": true
  },

  "test_settings" : {
    "default" : {
      "webdriver" : {
        "server_path": "node_modules/.bin/chromedriver",
        "port": 9515
      },
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },
    "firefox" : {
      "webdriver" : {
        "server_path": "node_modules/.bin/geckodriver",
        "cli_args": [
          "--log", "debug"
        ],
        "port": 4444
      },
      "desiredCapabilities": {
        "browserName": "firefox"
      }
    }
  }
}
